<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:centerColor="@color/colorBackgroundSecondary"
                android:endColor="@color/colorPanelPrimary"
                android:gradientRadius="90"
                android:startColor="@color/colorBackgroundSecondary"
                android:type="linear"/>
            <corners android:radius="@dimen/small" />
        </shape>
    </item>

    <item
        android:left="2dp"
        android:right="0.5dp"
        android:top="0.5dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPanelPrimary"/>
            <corners android:radius="@dimen/extra_small" />
        </shape>
    </item>
</layer-list>