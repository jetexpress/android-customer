<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundPrimary"
    tools:context="com.weekendinc.jet.fragments.PriceCheckingFragment">

    <Button
        android:id="@+id/btn_price_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/medium"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorTextPrimary"
        android:textSize="@dimen/text_size_medium_large"
        android:text="@string/title_section_check_price"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btn_price_check"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small"
            android:orientation="vertical"
            android:background="@drawable/custom_bg_rounded_square_white_fill">

            <EditText
                android:id="@+id/et_origin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/small"
                android:layout_marginLeft="@dimen/small"
                android:layout_marginStart="@dimen/small"
                android:background="@android:color/transparent"
                android:focusable="false"
                android:hint="@string/price_check_origin"/>
            <TextView
                android:id="@+id/tv_origin_error_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/medium"
                android:layout_marginStart="@dimen/medium"
                android:textColor="@android:color/holo_red_dark"
                android:text="@string/pod_required"
                android:visibility="gone"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="@dimen/extra_small"
                android:background="@color/divider"/>
            <EditText
                android:id="@+id/et_destination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/small"
                android:layout_marginStart="@dimen/small"
                android:padding="@dimen/small"
                android:background="@android:color/transparent"
                android:focusable="false"
                android:hint="@string/price_check_destination"/>
            <TextView
                android:id="@+id/tv_destination_error_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/medium"
                android:layout_marginStart="@dimen/medium"
                android:textColor="@android:color/holo_red_dark"
                android:text="@string/pod_required"
                android:visibility="gone"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="@dimen/extra_small"
                android:background="@color/divider"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small"
                android:layout_marginBottom="@dimen/small">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/medium"
                    android:layout_marginStart="@dimen/medium"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_medium_large"
                    android:text="@string/price_check_weight"/>
                <LinearLayout
                    android:id="@+id/ll_weight_plus_minus_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/medium"
                    android:layout_marginEnd="@dimen/medium"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/custom_bg_rounded_square_primary_dark">
                    <ImageView
                        android:id="@+id/img_weight_minus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/small"
                        android:layout_marginRight="@dimen/small"
                        android:src="@drawable/ic_minus_primary_dark"/>
                    <View
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimaryDark"/>
                    <ImageView
                        android:id="@+id/img_weight_plus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/small"
                        android:layout_marginRight="@dimen/small"
                        android:src="@drawable/ic_plus_primary_dark"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_weight_kg_label"
                    android:layout_toLeftOf="@id/ll_weight_plus_minus_container"
                    android:layout_toStartOf="@id/ll_weight_plus_minus_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/medium"
                    android:layout_marginEnd="@dimen/medium"
                    android:layout_centerVertical="true"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_medium_large"
                    android:text="@string/price_check_kg"/>
                <TextView
                    android:id="@+id/tv_weight"
                    android:layout_toLeftOf="@id/tv_weight_kg_label"
                    android:layout_toStartOf="@id/tv_weight_kg_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/extra_small"
                    android:layout_marginEnd="@dimen/extra_small"
                    android:layout_centerVertical="true"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_medium_large"/>

            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_price_result_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/small">
            <ProgressBar
                android:id="@+id/progress_bar_price_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tv_price_error_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/large"
                android:layout_marginStart="@dimen/large"
                android:layout_marginRight="@dimen/large"
                android:layout_marginEnd="@dimen/large"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="@color/colorTextPrimary"
                android:visibility="gone"/>
            <ListView
                android:id="@+id/list_view_price_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_bg_rounded_square_white_fill"
                android:divider="@color/divider"
                android:dividerHeight="3dp"
                android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
