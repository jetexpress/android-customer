<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login"
    tools:context="com.weekendinc.jet.LoginActivity">

    <!-- Fragment Content Here -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@android:color/transparent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_small"
                android:src="@drawable/logo_jet_express"/>

                <LinearLayout
                    android:id="@+id/login_fragment_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/larger"
                    android:paddingTop="@dimen/large"
                    android:paddingRight="@dimen/larger"
                    android:focusableInTouchMode="true" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
