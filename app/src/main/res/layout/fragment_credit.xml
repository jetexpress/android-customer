<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="@color/background_color"
    tools:context="com.weekendinc.jet.fragments.CreditFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/v_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingBottom="@dimen/spacing_normal"
            android:src="@drawable/ic_empty_state_jemput" />

        <TextView
            android:id="@+id/coming_soon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v_empty"
            android:layout_centerHorizontal="true"
            android:text="@string/coming_soon"
            android:textColor="@color/black"
            android:textSize="@dimen/font_headline" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/coming_soon"
            android:layout_centerHorizontal="true"
            android:text="@string/coming_soon_description"
            android:textColor="@color/colorOfHintAndHelper"
            android:textSize="@dimen/font_subheading"/>

    </RelativeLayout>

</FrameLayout>
