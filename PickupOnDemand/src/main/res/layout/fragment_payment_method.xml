<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="coid.customer.pickupondemand.jet.fragment.PaymentMethodFragment">

    <include
        layout="@layout/basic_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <!-- CONTENT -->
    <RelativeLayout
        android:id="@+id/rl_content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_bottom_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:background="@color/colorBackgroundSecondary">

            <RelativeLayout
                android:id="@+id/rl_add_pickup_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/medium"
                android:layout_marginTop="@dimen/small"
                android:layout_marginRight="@dimen/medium"
                android:layout_marginBottom="@dimen/small"
                android:layout_marginLeft="@dimen/medium"
                android:background="@drawable/custom_bg_rounded_square_red_fill">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:drawableLeft="@drawable/ic_camera"
                    android:drawableStart="@drawable/ic_camera"
                    android:drawablePadding="@dimen/medium"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_medium"
                    android:text="@string/pod_add_pickup_image"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_above="@id/ll_bottom_container"
            android:background="@color/colorBackgroundPrimary">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/medium"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_medium_large"
                android:text="@string/pod_choose_payment_method"/>
            <ListView
                android:id="@+id/list_view_payment_method"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPanelPrimary"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
