<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context="coid.customer.pickupondemand.jet.fragment.ObserveCourierFragment">

    <LinearLayout
        android:id="@+id/ll_action_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignBottom="@+id/ll_courier_info_container"
        android:background="@color/colorPanelPrimary">
        <TextView
            android:id="@+id/tv_courier_sms"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/medium"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:drawableTop="@drawable/ic_sms"
            android:textColor="@color/colorTextPrimary"
            android:text="@string/pod_courier_sms"/>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/colorLinePrimary"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/medium"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:orientation="vertical">

        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/colorLinePrimary"/>
        <TextView
            android:id="@+id/tv_courier_call"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/medium"
            android:gravity="center"
            android:drawableTop="@drawable/ic_phone"
            android:textColor="@color/colorTextPrimary"
            android:text="@string/pod_courier_call"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_courier_info_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/medium"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:gravity="center">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_courier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_default_courier_photo"
            app:civ_border_width="0.5dp"
            app:civ_border_color="@color/colorTextSecondary"/>
        <TextView
            android:id="@+id/tv_courier_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textAllCaps="true"
            android:textColor="@color/colorTextPrimary"/>
        <TextView
            android:id="@+id/tv_courier_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:drawableLeft="@drawable/ic_rating"
            android:drawableStart="@drawable/ic_rating"
            android:drawablePadding="@dimen/extra_small"
            android:textAllCaps="true"
            android:textColor="@color/colorTextPrimary"
            android:text="5.0"/>
    </LinearLayout>
</RelativeLayout>