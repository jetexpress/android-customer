<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="coid.customer.pickupondemand.jet.fragment.MapWithBottomViewFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/fl_map_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/rl_choose_pickup_location_marker_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <ImageView
                android:id="@+id/img_center_marker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/medium_large"
                android:layout_marginBottom="@dimen/large"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_marker_red"/>
            <RelativeLayout
                android:id="@+id/rl_choose_pickup_location_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_bg_rounded_square_dark_fill">
                <LinearLayout
                    android:id="@+id/ll_choose_pickup_location_marker_container_clickable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/small"
                    android:paddingRight="@dimen/small"
                    android:paddingEnd="@dimen/small"
                    android:paddingBottom="@dimen/small"
                    android:paddingLeft="@dimen/medium"
                    android:paddingStart="@dimen/medium"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:visibility="invisible">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/small"
                        android:layout_marginStart="@dimen/small"
                        android:textAllCaps="true"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_size_medium_large"
                        android:text="@string/pod_choose_location"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/small"
                        android:layout_marginStart="@dimen/small"
                        android:scaleType="fitEnd"
                        android:src="@drawable/ic_next_white"/>
                </LinearLayout>
                <ProgressBar
                    android:id="@+id/progress_bar_choose_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small"
                    android:layout_centerInParent="true"
                    style="?android:attr/progressBarStyleSmall"/>
                <ImageView
                    android:id="@+id/img_choose_location_not_found"
                    android:layout_width="@dimen/medium_large"
                    android:layout_height="@dimen/medium_large"
                    android:layout_margin="@dimen/extra_small"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_cancel"
                    android:visibility="gone"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_bottom_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"/>

    <RelativeLayout
        android:id="@+id/rl_search_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small"
        android:layout_alignParentTop="true"
        android:background="@drawable/custom_bg_rounded_square_primary_fill">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/medium"
            android:layout_marginStart="@dimen/medium"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_search"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/small"
            android:paddingRight="@dimen/extra_large"
            android:paddingBottom="@dimen/small"
            android:paddingLeft="@dimen/extra_large"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_area_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textAllCaps="true"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/text_size_small"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_centerInParent="true"
                    android:textAllCaps="true"
                    android:textColor="@color/colorTextPrimary"/>
                <ProgressBar
                    android:id="@+id/progress_bar_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small"
                    android:layout_centerInParent="true"
                    style="?android:attr/progressBarStyleSmall"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_my_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/medium"
        android:layout_above="@id/ll_bottom_container"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        app:fabSize="normal"
        android:src="@drawable/ic_my_location"
        app:backgroundTint="@android:color/white"/>
</RelativeLayout>
