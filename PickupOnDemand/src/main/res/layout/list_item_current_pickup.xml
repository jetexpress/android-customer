<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_content_container"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/small">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_pickup_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/small"
            android:paddingLeft="@dimen/small"
            android:paddingRight="@dimen/small"
            android:drawableLeft="@drawable/ic_barcode"
            android:drawableStart="@drawable/ic_barcode"
            android:drawablePadding="@dimen/small"
            android:maxLines="1"
            android:textAllCaps="true"
            android:textSize="@dimen/text_size_medium_large"
            android:textColor="@color/colorTextPrimary"/>
        <TextView
            android:id="@+id/tv_pickup_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/small"
            android:paddingLeft="@dimen/small"
            android:paddingRight="@dimen/small"
            android:drawableLeft="@drawable/ic_calendar"
            android:drawableStart="@drawable/ic_calendar"
            android:drawablePadding="@dimen/small"
            android:maxLines="1"
            android:textAllCaps="true"
            android:textSize="@dimen/text_size_medium_large"
            android:textColor="@color/colorTextPrimary"/>
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/small"
            android:paddingLeft="@dimen/small"
            android:paddingRight="@dimen/small"
            android:drawableLeft="@drawable/ic_coins"
            android:drawableStart="@drawable/ic_coins"
            android:drawablePadding="@dimen/small"
            android:maxLines="1"
            android:textAllCaps="true"
            android:textSize="@dimen/text_size_medium_large"
            android:textColor="@color/colorTextPrimary"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/small"
                android:paddingLeft="@dimen/small"
                android:paddingRight="@dimen/small"
                android:drawableLeft="@drawable/ic_exclamation"
                android:drawableStart="@drawable/ic_exclamation"
                android:drawablePadding="@dimen/small"
                android:textAllCaps="true"
                android:textSize="@dimen/text_size_medium_large"
                android:textColor="@color/colorTextPrimary"/>
            <ProgressBar
                android:id="@+id/progress_bar_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/small"
                android:layout_marginStart="@dimen/small"
                style="?android:progressBarStyleSmall"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/img_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_overflow_menu"/>
</LinearLayout>