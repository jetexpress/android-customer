<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="coid.customer.pickupondemand.jet.fragment.PickupHistoryDetailFragment">

    <include
        layout="@layout/basic_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <!-- CONTENT -->
    <RelativeLayout
        android:id="@+id/rl_content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_bottom_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:background="@color/colorBackgroundSecondary"/>

        <LinearLayout
            android:id="@+id/ll_quick_pickup_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/medium"
            android:orientation="vertical"
            android:background="@color/colorPanelPrimary">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAllCaps="true"
                    android:textColor="@color/colorTextPrimary"
                    android:text="@string/pod_pickup_quick_pickup_item_count"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textColor="@color/colorTextPrimary"
                    android:text=":"/>
                <TextView
                    android:id="@+id/tv_quick_pickup_item_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/extra_small"
                    android:layout_marginStart="@dimen/extra_small"
                    android:layout_weight="1"
                    android:textAllCaps="true"
                    android:textColor="@color/colorTextPrimary"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/extra_small"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAllCaps="true"
                    android:textColor="@color/colorTextPrimary"
                    android:text="@string/pod_pickup_actual_pickup_item_count"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textColor="@color/colorTextPrimary"
                    android:text=":"/>
                <TextView
                    android:id="@+id/tv_actual_pickup_item_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/extra_small"
                    android:layout_marginStart="@dimen/extra_small"
                    android:layout_weight="1"
                    android:textAllCaps="true"
                    android:textColor="@color/colorTextPrimary"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/extra_small"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAllCaps="true"
                    android:textColor="@color/colorTextPrimary"
                    android:text="@string/pod_pickup_created_waybill"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textColor="@color/colorTextPrimary"
                    android:text=":"/>
                <TextView
                    android:id="@+id/tv_created_waybills_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/extra_small"
                    android:layout_marginStart="@dimen/extra_small"
                    android:layout_weight="1"
                    android:textAllCaps="true"
                    android:textColor="@color/colorTextPrimary"/>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/ll_bottom_container"
            android:layout_below="@id/ll_quick_pickup_info"
            android:background="@color/colorBackgroundPrimary">
            <LinearLayout
                android:id="@+id/ll_empty_pickup_item_info_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/medium"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_large"
                    android:textColor="@color/colorTextPrimary"
                    android:text="@string/pod_pickup_wait_for_waybills"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/colorTextPrimary"
                    android:text="@string/pod_pickup_in_process"/>
            </LinearLayout>
            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/swipe_refresh_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ListView
                    android:id="@+id/list_view_pickup_item"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </android.support.v4.widget.SwipeRefreshLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
